<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.hp.ezlearn.Register"
    android:background="#ffffff">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:background="#fb0808"
        android:orientation="vertical"
        android:id="@+id/linearLayout">

        <TextView
            android:id="@+id/t10"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:text="Troy"
            android:textColor="#ffffff"
            android:layout_gravity="center_horizontal"
            android:textSize="30dp"
            android:textIsSelectable="false"
            android:textStyle="bold"
            android:padding="25dp"
            android:background="#F25455"
            android:textAlignment="center" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:layout_marginTop="280dp"
        android:id="@+id/lnrlyout"
        android:orientation="horizontal" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/user_name"
        android:layout_gravity="center"
        android:id="@+id/img11"
        android:layout_above="@+id/imageView13"
        android:layout_marginBottom="34dp" />
    <EditText
        android:id="@+id/et_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Username"
        android:layout_gravity="center"
        android:textColor="#020202"
        android:background="#00000000"
        android:letterSpacing="0.1"
        android:textSize="16dp"
        android:inputType="text"
        android:padding="5dp"
        android:layout_alignTop="@+id/img11"
        android:layout_toRightOf="@+id/img11"
        android:layout_toEndOf="@+id/img11" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/email_id"
        android:layout_gravity="center"
        android:id="@+id/imageView13"
        android:layout_above="@+id/img12"
        />

    <EditText
        android:id="@+id/et_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Email Id"
        android:background="#00000000"
        android:inputType="text"
        android:letterSpacing="0.1"
        android:textSize="16dp"
        android:textColor="#060606"
        android:layout_alignBottom="@+id/imageView13"
        android:layout_alignLeft="@+id/et_username"
        android:layout_alignStart="@+id/et_username"
        android:padding="5dp"
        android:text="@string/emptyString" />
    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/mobile"
        android:layout_gravity="center"
        android:id="@+id/img12"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/lnrlyout"
        />
    <EditText
        android:id="@+id/et_mobile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Mobile"
        android:textColor="#020202"
        android:background="#00000000"
        android:letterSpacing="0.1"
        android:textSize="16dp"
        android:inputType="text"
        android:padding="5dp"
        android:layout_alignTop="@+id/img12"
        android:layout_toRightOf="@+id/img12"
        android:layout_toEndOf="@+id/img12" />
    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/select_course"
        android:layout_gravity="center"
        android:id="@+id/img13"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/img12"
        />


    <Button
        android:layout_width="280dp"
        android:layout_height="40dp"
        android:text="SUBMIT"
        android:id="@+id/register"
        android:textColor="#ffffff"
        android:background="@drawable/round_button"
        android:layout_above="@+id/linearLayout2"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dp" />

    <LinearLayout
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:background="#ebebeb"
        android:orientation="horizontal"
        android:id="@+id/linearLayout2"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/linearLayout"
        android:layout_alignEnd="@+id/linearLayout"
        android:layout_alignLeft="@+id/linearLayout"
        android:layout_alignStart="@+id/linearLayout"
        android:weightSum="1">

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="37dp"
            android:text="    Already have an account?"
            android:textAlignment="center"
            android:textColor="#666565"
            android:textSize="18dp"
            android:textIsSelectable="false"
            android:paddingTop="5dp" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Login"
            android:id="@+id/button22"
            android:textColor="#017DBD"
            android:background="@color/Transparent"
            android:paddingRight="10dp"
            android:layout_weight="0.33" />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="REGISTER"
        android:id="@+id/textView17"
        android:textSize="25dp"
        android:textColor="#050505"
        android:layout_marginLeft="30dp"
        android:layout_below="@+id/linearLayout"

        android:paddingTop="5dp" />

    <EditText
        android:id="@+id/et_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Password"
        android:textColor="#020202"
        android:background="#00000000"
        android:letterSpacing="0.1"
        android:textSize="16dp"
        android:inputType="numberPassword"
        android:padding="5dp"
        android:layout_alignTop="@+id/img13"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignLeft="@+id/et_username"
        android:layout_alignStart="@+id/et_username" />


</RelativeLayout>
